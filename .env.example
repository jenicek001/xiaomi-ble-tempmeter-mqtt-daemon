# Environment variables for Xiaomi Mijia Bluetooth Daemon
# Copy this file to .env and fill in your actual values below

# MQTT Configuration - FILL IN YOUR CREDENTIALS
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=mijiableht-daemon
MQTT_BASE_TOPIC=mijiableht
MQTT_DISCOVERY_PREFIX=homeassistant
MQTT_RETAIN=true
MQTT_QOS=0

# Bluetooth Configuration
BLUETOOTH_ADAPTER=0
BLUETOOTH_SCAN_INTERVAL=300
BLUETOOTH_CONNECTION_TIMEOUT=15
BLUETOOTH_RETRY_ATTEMPTS=3
BLUETOOTH_RETRY_DELAY=5
BLUETOOTH_SCAN_DURATION=10
BLUETOOTH_REDISCOVERY_INTERVAL=3600

# Device Configuration
DEVICES_AUTO_DISCOVERY=true
DEVICES_POLL_INTERVAL=300

# Static Devices (replace with your actual device MAC addresses)
STATIC_DEVICES_MACS="A4:C1:38:AA:AA:AA,A4:C1:38:BB:BB:BB"
STATIC_DEVICES_NAMES="Living Room,Bedroom"
STATIC_DEVICES_MODES="LYWSDCGQ/01ZM,LYWSDCGQ/01ZM"
STATIC_DEVICES_INTERVALS="180,300"
STATIC_DEVICES_ENABLED="true,true"

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=""

# Optional Features (not implemented yet)
MONITORING_ENABLED=false
MONITORING_PORT=8080
WEB_DASHBOARD_ENABLED=false
WEB_DASHBOARD_PORT=8081
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8082